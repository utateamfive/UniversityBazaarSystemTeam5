<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#36598F"
    tools:context=".addSales">

    <TextView
        android:id="@+id/NameofItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="25dp"
        android:text="Name of Item for Sale"
        android:textColor="@color/white"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/PriceofItem"
        android:text = "Price of Item for Sale"
        android:textColor="@color/white"
        android:layout_below="@id/NameofItem" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/NameofSeller"
        android:text="Name of Item seller"
        android:layout_marginVertical="25dp"
        android:textColor="@color/white"
        android:layout_below="@+id/PriceofItem"/>

    <EditText
        android:id="@+id/ItemName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/NameofItem"
        android:layout_marginHorizontal="20dp"
        android:hint="Enter Name of item"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ItemPrice"
        android:inputType="number"
        android:layout_toRightOf="@id/PriceofItem"
        android:layout_below="@id/ItemName"
        android:layout_marginHorizontal="25dp"
        android:hint="Enter price of item"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ItemSeller"
        android:layout_toRightOf="@id/NameofSeller"
        android:layout_below="@id/ItemPrice"
        android:layout_marginHorizontal="34dp"
        android:hint="Enter Username" />

    <Button
        android:id="@+id/SalesSubmitButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ItemSeller"
        android:onClick="goSales"
        android:text="Submit Item" />


</RelativeLayout>