<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".addExchange"
    android:background="#36598F">

    <TextView
        android:id="@+id/NameofItemEX"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="25dp"
        android:text="Name of Item for trade"
        android:textColor="@color/white"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ExchangeForItem"
        android:text = "Item to exchange for"
        android:textColor="@color/white"
        android:layout_below="@id/NameofItemEX" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/NameofTrader"
        android:text="Name of Item trader"
        android:textColor="@color/white"
        android:layout_marginVertical="25dp"
        android:layout_below="@+id/ExchangeForItem"/>

    <EditText
        android:id="@+id/ItemNameEX"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/NameofItemEX"
        android:layout_marginHorizontal="20dp"
        android:hint="Enter Name of item"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ItemEX"
        android:layout_toRightOf="@id/ExchangeForItem"
        android:layout_below="@id/ItemNameEX"
        android:layout_marginHorizontal="25dp"
        android:hint="Enter Item That is Wanted"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/TraderName"
        android:layout_toRightOf="@id/NameofTrader"
        android:layout_below="@id/ItemEX"
        android:layout_marginHorizontal="34dp"
        android:hint="Enter Username" />

    <Button
        android:id="@+id/ExchangeSubmitButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/TraderName"
        android:text="Submit Item" />

</RelativeLayout>